<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Week3Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="@dimen/sample_view_size"
            android:layout_height="@dimen/sample_view_size"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/margin_std_16"
            android:background="#dbb537" />

        <View
            android:id="@+id/pink_view"
            android:layout_width="@dimen/sample_view_size"
            android:layout_height="@dimen/sample_view_size"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_std_16"
            android:background="#e08484" />

        <View
            android:id="@+id/green_view"
            android:layout_width="@dimen/sample_view_size"
            android:layout_height="@dimen/sample_view_size"
            android:layout_marginTop="@dimen/margin_std_16"
            android:layout_marginEnd="@dimen/margin_std_16"
            android:layout_toStartOf="@id/pink_view"
            android:background="#609c85" />

        <View
            android:layout_width="@dimen/sample_view_size"
            android:layout_height="@dimen/sample_view_size"
            android:layout_marginTop="@dimen/margin_std_16"
            android:layout_toStartOf="@id/green_view"
            android:background="#99dec3" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_std_16"
            android:layout_marginStart="@dimen/margin_std_16"
            android:layout_marginEnd="@dimen/margin_std_16"
            android:text="@string/scrollview_text"
            android:layout_below="@id/green_view"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_std_16"
            android:layout_marginStart="@dimen/margin_std_16"
            android:layout_marginEnd="@dimen/margin_std_16"
            android:text="@string/scrollview_text"
            android:layout_below="@id/text1"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_std_16"
            android:layout_marginStart="@dimen/margin_std_16"
            android:layout_marginEnd="@dimen/margin_std_16"
            android:text="@string/scrollview_text"
            android:layout_below="@id/text2"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_std_16"
            android:layout_marginStart="@dimen/margin_std_16"
            android:layout_marginEnd="@dimen/margin_std_16"
            android:text="@string/scrollview_text"
            android:layout_below="@id/text3"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_std_16"
            android:layout_marginStart="@dimen/margin_std_16"
            android:layout_marginEnd="@dimen/margin_std_16"
            android:text="@string/scrollview_text"
            android:layout_below="@id/text4"/>

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_std_16"
            android:layout_marginStart="@dimen/margin_std_16"
            android:layout_marginEnd="@dimen/margin_std_16"
            android:text="@string/scrollview_text"
            android:layout_below="@id/text5"/>
    </RelativeLayout>
</ScrollView>